---
import { Image } from "astro:assets";

interface Props {
  title: string;
  imgSrc: ImageMetadata;
  imgAlt: string;
  description: string;
}

const { title, imgAlt, imgSrc, description } = Astro.props;
---

<style>
  div.card {
    background-color: white;
    border-radius: 0.5rem;
    border: 3px solid black;
    transition: all;
    padding: 1rem;
    box-shadow: 7px 7px 0 rgb(0 0 0 / 1);
    transition: box-shadow 0.2s ease-in-out;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  div.card:hover {
    box-shadow: 3px 3px 0 rgb(0 0 0 / 1);
  }
</style>

<div class="card">
  <h3 class="poppins text-lg md:text-xl">{title}</h3>
  <div class="rounded-lg border-3 border-black my-4 h-56">
    <Image
      src={imgSrc}
      alt={imgAlt}
      width={800}
      height={400}
      class="rounded h-full w-full object-cover"
    />
  </div>
  <p class="poppins">{description}</p>
  <slot />
</div>
